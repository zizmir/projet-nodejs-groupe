<% extend('layout') %>

  <section class="hero is-primary">
    <h1 class="title">Modules</h1>
    <div class="container">
      <table class="table is-striped">
        <thead>
          <tr>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i = 0; i < modules.length; i++) { %>
            <tr>
              <td>
                <%= modules[i].subject %>
              </td>
              <td>
                <%= modules[i].teacher %>
              </td>
              <td>
                <p class="field">
                  <a class="button is-small <%=(modules[i].state== true) ? " is-success " : "is-danger " %>">
                    <span class="icon is-small">
                      <i class="mdi mdi-plus"></i>
                    </span>
                  </a>
                </p>
              </td>
            </tr>
            <% } %>
        </tbody>
      </table>
    </div>
  </section>